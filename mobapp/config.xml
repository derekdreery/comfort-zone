<?xml version='1.0' encoding='utf-8'?>
<widget id="org.dodjsoft.comfortzone" version="0.0.2" android-versionCode="19"
    xmlns="http://www.w3.org/ns/widgets" 
    xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Comfort Zone</name>
    <description>
        An app that allows you to manage and expand your comfort zone - the things you feel comfortable doing.
    </description>
    <author email="dodjsoft@gmail.com" href="https://derekdreery.github.io/comfort-zone">
        Richard Dodd
    </author>
    <icon src="../logos/logo.png" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <plugin name="cordova-plugin-indexeddb-async" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>

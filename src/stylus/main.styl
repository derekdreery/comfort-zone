$button-bg-color = hsl(0, 50%, 90%)
$header-bg-color = hsl(70, 10%, 85%)
$link-color = hsl(0, 0%, 40%)
$tile-bg-color = hsl(60, 30%, 85%)
$tile-margin = 0.3em
$tile-border-radius = 0.2em
$text-color = black

/* quick normalize */
*
  margin 0
  padding 0
  font-size inherit
  text-decoration none
  color $text-color

body
  font-family 'Open Sans', sans-serif
  font-size 18px


/* all links */
a
  color $link-color
a:hover
  color darken($link-color, 10%)


.paragraph
  margin 2em auto
  @media screen and (min-width: 600px)
    width 80%

button,
span.button-style
  border none
  padding 0.5em
  margin $tile-margin
  border-radius $tile-border-radius

button
  background $button-bg-color
button:active
  background darken($button-bg-color, 5%)

.btn
  cursor pointer
  padding-left 0.3em
  font-size 1.5em

.btn-row
  display flex

  *:not(:last-child)
    margin-right 0.4em




html,
body
  height 100%
/* root */
.container
  display flex
  align-items stretch
  height 100%
  flex-direction column
  header
    padding 1.5em 0.8em
    background-color $header-bg-color
    display flex
    justify-content space-between
    .btn-nav
        font-size 1.5em
    nav > ul > li:not(:last-child)
      margin-right 1.5em
    ul
      display flex
      margin 0
      padding 0
      li
        list-style-type none
  section.main-container
    flex 1
    display flex
    justify-content center
    flex-wrap wrap
    .svg-container
      flex 2 1 40em
      display flex
      justify-content center
      .zone-container
        stroke-width 0.005
        stroke #333
        text
          //text-anchor middle
          //stroke-width 0
          //font-size 0.03pt
        .segment
          fill hsl(0, 50%, 70%)
          stroke white
          stroke-width 0.03
          stroke-linejoin bevel
          cursor pointer
        .segment.achieved
          fill hsl(120, 50%, 70%)
        .segment.no-selected
          fill hsl(0, 50%, 90%)
    .detail-container
      flex 1 1 20em
      background-color darken($header-bg-color, 10)
      padding 2em
      .title
        span.spacer
          margin 0 1em
          color lighten($text-color, 40)
  section.config-container
    @media screen and (min-width: 900px)
      width 70%
    margin 1em auto
    display flex
    flex-direction column
    div.area-config
      display flex
      flex-wrap wrap
      align-items stretch
      input
        flex 1 1 15em
      .area-config-name
        flex 1 1 15em
        display flex
        align-items center
        justify-content space-between
        background-color $header-bg-color
        border-radius $tile-border-radius
        margin $tile-margin
        padding 0.3em 1em
      .area-config-targets
        flex 3 1 30em
        display flex
        flex-direction column
        .current-targets
          background-color $header-bg-color
          border-radius $tile-border-radius
          margin $tile-margin
          .target
            padding 0.3em 1em
            display flex
            align-items center
            justify-content space-between
          .target:hover
            background-color darken($header-bg-color, 10)

@import "constants"
/* quick normalize */
*
  margin 0
  padding 0
  font-size inherit
  text-decoration none
  color $text-color
  outline none
  border none
  font-family 'Open Sans', sans-serif

body
  font-family 'Open Sans', sans-serif
  font-size 15px

/* all links */
a
  color $link-color
a:hover
  color darken($link-color, 10%)


.paragraph
  margin 2em auto
  width 80%

button,
span.button-style
  border none
  padding 0.5em

button
  background $button-bg-color
button:active
  background darken($button-bg-color, 5%)

.btn
  cursor pointer
  font-size 1.5em

.btn-row
  display flex
  justify-content center
  align-items center
  .btn
    padding 0.2em 0.4em

$header-button =
  padding: 0.6em 0.6em

.stretch
  flex 1


html,
body
  height 100%
/* root */
.container
  display flex
  align-items stretch
  height 100%
  flex-direction column
  header
    nav
      background-color $header-bg-color
      display flex
      justify-content space-between
      .btn-nav
        font-size 1.3em
        {$header-button}
      .btn-nav.active
        background-color darken($header-bg-color, 10%)
  section.main-container
    flex 1
    display flex
    justify-content center
    flex-wrap wrap
    .svg-container
      flex 2 1 40em
      display flex
      justify-content center
      .zone-container
        stroke-width 0.005
        stroke #333
        text
          //text-anchor middle
          //stroke-width 0
          //font-size 0.03pt
        .segment
          fill hsl(0, 50%, 70%)
          stroke white
          stroke-width 0.03
          stroke-linejoin bevel
          cursor pointer
        .segment.achieved
          fill hsl(120, 50%, 70%)
        .segment.no-selected
          fill hsl(0, 50%, 90%)
    .detail-container
      flex 1 1 20em
      background-color darken($header-bg-color, 10)
      padding 2em
      .title
        span.spacer
          margin 0 1em
          color lighten($text-color, 40)
  section.config-container
    width 100%
    @media screen and (min-width: 500px)
      width 80%
    margin 1em auto
    display flex
    flex-direction column
    div.area-config
      display flex
      flex-wrap wrap
      align-items stretch
      margin-top 1em
      margin-bottom -($small-margin)
      margin-right -($small-margin)
      .config-row, .btn-add-target
        margin-bottom $small-margin
        margin-right $small-margin
      .config-row
        flex 1 1 15em
        display flex
        align-items stretch
        background-color $header-bg-color
        .static-text
          display flex
          flex-direction column
          justify-content center
          padding-left 1em
          flex 1
        .static-text.title
          font-weight bold
        .static-text:hover /* for PC only */
          background-color darken($header-bg-color, 10)
        .input
          border-top-left-radius $tile-border-radius
          border-bottom-left-radius $tile-border-radius
          border 1px solid $header-bg-color
          padding-left 1em
          flex 1
      .area-config-targets
        flex 3 1 30em
        display flex
        flex-direction column
        .btn-add-target
          flex 1
    .btn-group
      margin-top 1em
      display flex
      flex-wrap wrap
      margin-right -($small-margin)
      margin-bottom -($small-margin)
      .btn-add-area
        flex 1 0 20em
        margin-right $small-margin
        margin-bottom $small-margin

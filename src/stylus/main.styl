/* quick normalize */
*
  margin 0
  padding 0
  text-decoration none
  color black

/* all links */
a
  color hsl(0, 0%, 40%)
a:hover
  color hsl(0, 0%, 30%)

html,
body
  height 100%
/* root */
.container
  display flex
  align-items stretch
  height 100%
  flex-direction column
  header
    padding 1.5em 0.8em
    background-color hsl(70, 10%, 85%)
    display flex
    justify-content space-between
    nav > ul > li:not(:last-child)
      margin-right 1.5em
    ul
      display flex
      margin 0
      padding 0
      li
        list-style-type none
  .main-container
    flex 1
    display flex
    justify-content center
    .zone-container
      stroke-width 0.005
      stroke #333
      text
        text-anchor middle
        stroke-width 0
        font-size 0.03pt
      .segment
        fill hsl(0, 50%, 70%)
        stroke white
        stroke-width 0.03
        stroke-linejoin bevel
      .segment.achieved
        fill hsl(120, 50%, 70%)

.paragraph
  margin 2em auto
  width 80%
